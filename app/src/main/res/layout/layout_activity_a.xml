<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityA">


    <TextView
        android:id="@+id/txtV_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/press_start_2p"
        android:text="@string/activityA"
        android:textColor="@android:color/background_dark"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="54dp"
        android:fontFamily="@font/press_start_2p"
        android:text="Name" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="101dp"
        android:fontFamily="@font/press_start_2p"
        android:text="Age" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="151dp"
        android:fontFamily="@font/press_start_2p"
        android:text="Address" />

    <EditText
        android:id="@+id/eTxt_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="37dp"
        android:layout_marginTop="39dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/eTxt_Age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/eTxt_Name"
        android:layout_marginTop="92dp"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/eTxt_Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/eTxt_Name"
        android:layout_alignTop="@+id/textView4"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btn_AddUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eTxt_City"
        android:layout_marginLeft="25dp"
        android:fontFamily="@font/press_start_2p"
        android:text="@string/btn_addUser"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="228dp"
        android:fontFamily="@font/press_start_2p"
        android:text="City" />

    <EditText
        android:id="@+id/eTxt_City"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/eTxt_Name"
        android:layout_alignParentTop="true"
        android:layout_marginTop="215dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btn_ActivityB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eTxt_City"
        android:layout_marginLeft="150dp"
        android:fontFamily="@font/press_start_2p"
        android:text="@string/btn_activityB"
        android:textSize="12dp" />

    <ListView
        android:id="@+id/lView_UsersActA"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>